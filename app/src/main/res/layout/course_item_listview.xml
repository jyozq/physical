<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@mipmap/course_1" android:layout_margin="10dp"
               />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="vertical" android:stretchColumns="0,1"
                android:layout_width="wrap_content" android:layout_height="match_parent"
                 android:layout_weight="1" android:gravity="center">
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="三年四班" android:textStyle="bold" android:textSize="20sp"/>
            <Button android:id="@+id/btn_start_course"
                    android:layout_width="wrap_content" android:textColor="@color/white" android:textSize="@dimen/font_size_14"
                    android:layout_height="@dimen/dimen_30dp" android:background="@color/blue17"
                    android:text="@string/btn_start_course"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal" android:gravity="center_vertical">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@mipmap/icon_time"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="2016年8月1日"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="星期二 17:30-18:30"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal" android:gravity="center_vertical">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@mipmap/icon_pin"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="篮球馆"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="篮球 0|40"/>
        </TableRow>
    </TableLayout>

    <ImageView android:layout_marginRight="@dimen/dimen_5dp"
               android:layout_width="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp"
               android:layout_height="wrap_content" android:src="@mipmap/right_arrow" />
</LinearLayout>