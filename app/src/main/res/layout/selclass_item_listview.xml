<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/selclass_item_view">
    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp"
                    android:orientation="horizontal" android:padding="@dimen/dimen_10dp"
                  android:gravity="center_vertical">
        <ImageView android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_40dp"
                   android:src="@mipmap/icon_class"
        />
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_24" android:id="@+id/selclass_course_name"
            android:text="三年级三班" android:layout_marginLeft="@dimen/dimen_20dp"
        />
    </LinearLayout>
</LinearLayout>