<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="horizontal">
    <LinearLayout
            android:id="@+id/id_today"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
        <ImageButton
                android:id="@+id/id_today_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@mipmap/icon_today" />
        <TextView
                android:id="@+id/id_today_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_today"
                android:textColor="@color/toolbar_btn_pressed"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/id_lesson"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
        <ImageButton
                android:id="@+id/id_lesson_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@mipmap/icon_kc_gray" />
        <TextView
                android:id="@+id/id_lesson_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_course"
                android:textColor="@color/toolbar_btn_gray"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/id_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
        <ImageButton
                android:id="@+id/id_class_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@mipmap/icon_class_gray" />
        <TextView
                android:id="@+id/id_class_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_class"
                android:textColor="@color/toolbar_btn_gray"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/id_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
        <ImageButton
                android:id="@+id/id_profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@mipmap/icon_wo_gray" />

        <TextView
                android:id="@+id/id_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_profile"
                android:textColor="@color/toolbar_btn_gray"
        />
    </LinearLayout>
</LinearLayout>
