<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="horizontal" android:gravity="center_vertical"
              android:padding="@dimen/dimen_5dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical"
        android:padding="@dimen/dimen_5dp" android:id="@+id/student_comment_view">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@mipmap/user_head_boy" android:layout_margin="10dp"
            />
        <TableLayout android:layout_width="wrap_content" android:layout_height="match_parent"
            android:gravity="center_vertical|left" android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_weight="1">
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center_vertical|left">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@mipmap/icon_flag"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="学号1" android:id="@+id/studentname"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center_vertical|left">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@mipmap/icon_link"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="未绑定设备" android:id="@+id/studentno"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center_vertical|left">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:src="@mipmap/icon_link"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="未绑定设备" android:id="@+id/gender"/>
            </TableRow>
        </TableLayout>

        <ImageView android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_width="wrap_content" android:id="@+id/right_arrow"
            android:layout_height="wrap_content" android:src="@mipmap/right_arrow" />
    </LinearLayout>
</LinearLayout>