<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout  android:layout_width="260dp" android:layout_height="180dp" xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_background_custom" android:orientation="vertical" >
    
         <LinearLayout android:layout_gravity="center" android:gravity="center" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="fill_parent" android:orientation="vertical" >
	    	<ImageView android:visibility="gone" android:id="@+id/alert_icon" android:layout_marginBottom="@dimen/dimen_5dp" android:src="@mipmap/final_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" />
	  		<TextView
	            android:id="@+id/alert_title" android:layout_width="wrap_content"
	            android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp"
	            android:text="支付成功" android:textColor="@color/black" android:layout_marginLeft="@dimen/dimen_15dp"
	            android:layout_marginRight="@dimen/dimen_10dp"
	            android:textSize="20sp" />

	     </LinearLayout>
	     <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
	         <Button android:id="@+id/alert_cancel_btn" 
	         android:layout_width="fill_parent" android:layout_height="@dimen/dimen_45dp" 
	         android:text="取消" android:background="@drawable/alert_gray_shape" android:layout_gravity="center_horizontal" 
	         android:textSize="@dimen/font_size_22" android:textColor="@color/white" android:layout_weight="1" />
	         <Button android:id="@+id/alert_ok_btn" 
	         android:layout_width="fill_parent" android:layout_height="@dimen/dimen_45dp" 
	         android:text="确定" android:background="@drawable/alert_right_yellow_shape" android:layout_gravity="center_horizontal" 
	         android:textSize="@dimen/font_size_22" android:textColor="@color/white" android:layout_weight="1" />

	     </LinearLayout>


</LinearLayout>