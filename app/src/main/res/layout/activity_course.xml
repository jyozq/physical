<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:gravity="center_vertical">
        <ImageView android:id="@+id/time_img"
                android:layout_width="wrap_content" android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_1dp" android:layout_height="wrap_content"
                android:src="@mipmap/course_icon_time" android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_alignParentLeft="true"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center_vertical"  android:text="@string/profile_upload"
                  android:textSize="@dimen/font_size_16" android:layout_marginLeft="@dimen/dimen_15dp"
                  android:layout_marginRight="@dimen/dimen_15dp" android:textColor="@color/gray_4a4f49"
                  android:layout_toRightOf="@id/time_img" android:id="@+id/time_label"
        />
        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/time_label" android:entries="@array/weekday"
        />
        <ImageView android:layout_marginRight="@dimen/dimen_20dp" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:src="@mipmap/right_arrow"
                   android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <include layout="@layout/line_view"  android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp"  />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:gravity="center_vertical">
        <ImageView android:id="@+id/classno_img"
                   android:layout_width="wrap_content" android:layout_gravity="center_vertical"
                   android:layout_marginTop="@dimen/dimen_1dp" android:layout_height="wrap_content"
                   android:src="@mipmap/course_icon_time" android:layout_marginLeft="@dimen/dimen_40dp"
                   android:layout_alignParentLeft="true"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center_vertical"  android:text="@string/profile_upload"
                  android:textSize="@dimen/font_size_16" android:layout_marginLeft="@dimen/dimen_15dp"
                  android:layout_marginRight="@dimen/dimen_15dp" android:textColor="@color/gray_4a4f49"
                  android:layout_toRightOf="@id/classno_img" android:id="@+id/classno_label"
        />
        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/classno_label" android:entries="@array/weekday"
        />
    </RelativeLayout>
</LinearLayout>