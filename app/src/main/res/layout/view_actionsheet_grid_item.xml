<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:id="@+id/itemText"
            android:layout_width="match_parent" android:layout_height="@dimen/dimen_45dp" android:gravity="center" android:text="数据"
            android:textColor="@color/gray_333333" android:textSize="18sp" android:layout_weight="1" />
        <View android:id="@+id/verline" android:layout_width="@dimen/dimen_1dp" android:layout_height="@dimen/dimen_45dp" android:background="@color/gray_dddedf" />
    </LinearLayout>
    <View android:id="@+id/horline" android:layout_width="fill_parent" android:layout_height="@dimen/dimen_1dp" android:background="@color/gray_dddedf" />

</LinearLayout>