<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:gravity="center_vertical"
    android:padding="@dimen/dimen_5dp">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@mipmap/user_head_boy" android:layout_margin="10dp"
               />
    <TableLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                 android:gravity="center_vertical|left" android:layout_marginLeft="@dimen/dimen_20dp">
        <TableRow android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:src="@mipmap/icon_flag"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="学号" android:id="@+id/studentno"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@mipmap/icon_link"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="未绑定设备" android:id="@+id/student_status"/>
        </TableRow>
    </TableLayout>

    <Button android:id="@+id/btn_do_start_course"
            android:layout_width="@dimen/dimen_80dp" android:textColor="@color/white" android:textSize="@dimen/font_size_16"
            android:layout_height="@dimen/dimen_30dp" android:background="@drawable/button_blue_selector"
            android:text="@string/btn_rebind" android:layout_marginLeft="@dimen/dimen_80dp"
    />
</LinearLayout>