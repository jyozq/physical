<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:id="@+id/id_tool_bar"
        android:layout_height="?attr/actionBarSize" android:background="?attr/colorPrimary" android:minHeight="?attr/actionBarSize">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent"  android:layout_height="match_parent">
            <ImageButton
                android:layout_width="@dimen/dimen_50dp" android:layout_height="match_parent"
                android:id="@+id/leftbtn" android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:background="@color/transparent"  android:src="@mipmap/back"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView"
                android:textColor="@color/white" android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true" />
            <Button
                android:id="@+id/rightbtn2" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@color/white"
                android:background="@color/transparent" android:src="@mipmap/main_titlebar_login" android:layout_marginRight="-5dp"
                android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginTop="@dimen/dimen_3dp"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
